<Page x:Class="Shoes.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Логин:"/>
            <TextBox Name="tbLogin"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox Name="pbPassword"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnEnterAsGuest" Content="Войти как гость" Click="btnEnterAsGuest_Click" Margin="15"/>
                <Button x:Name="btnEnter" Content="Войти" Click="btnEnter_Click" Margin="15"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
