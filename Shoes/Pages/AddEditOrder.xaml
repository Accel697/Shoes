<Page x:Class="Shoes.Pages.AddEditOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditOrder">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Артикул:"/>
            <TextBlock Text="{Binding code}"/>
            
            <TextBlock Text="Клиент:"/>
            <ComboBox Name="cbClient" SelectedValue="{Binding client}" SelectedValuePath="id" DisplayMemberPath="FullName"/>

            <TextBlock Text="Статус:"/>
            <ComboBox Name="cbStatus" SelectedValue="{Binding status}" SelectedValuePath="id" DisplayMemberPath="title"/>

            <TextBlock Text="Пункт выдачи:"/>
            <ComboBox Name="cbPickUpPoint" SelectedValue="{Binding pick_up_point}" SelectedValuePath="id" DisplayMemberPath="address_with_postal_code"/>

            <TextBlock Text="Дата заказа:"/>
            <TextBox Name="tbOrderDate" Text="{Binding order_date, StringFormat='dd.MM.yyyy'}"/>

            <TextBlock Text="Дата доставки:"/>
            <TextBox Name="tbDeliveryDate" Text="{Binding delivery_date, StringFormat='dd.MM.yyyy'}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnDelete" Content="Удалить" Click="btnDelete_Click" Visibility="Collapsed" Margin="15"/>
                <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Margin="15"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
