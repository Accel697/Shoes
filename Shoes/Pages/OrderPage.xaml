<Page x:Class="Shoes.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Margin="10">
            <TextBlock Name="tblUser" HorizontalAlignment="Right"/>
        </StackPanel>

        <ListView Name="LviewOrders" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" MouseDoubleClick="LviewOrders_MouseDoubleClick"  d:ItemsSource="{d:SampleData ItemCount=2}" Margin="10">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="10">
                                <TextBlock Text="{Binding code, StringFormat='Артикул заказа: \{0}'}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding orders_statuses.title}"/>
                                <TextBlock Text="{Binding pick_up_points.address_with_postal_code}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding order_date, StringFormat='Дата заказа: \{0:dd.MM.yyyy}'}"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="{Binding delivery_date, StringFormat='Дата доставки: \{0:dd.MM.yyyy}'}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Column="1" Grid.Row="2" x:Name="btnAddOrder" Content="Добавить заказ" Click="btnAddOrder_Click" Visibility="Collapsed" Width="200" Margin="15"/>
    </Grid>
</Page>
